<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/my_message_item_date"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/sub_text_color"
        android:textSize="11.0sp"/>

    <LinearLayout
        android:id="@+id/my_message_item_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_message_list_item_selector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_message_title_img"
            android:layout_width="fill_parent"
            android:layout_height="130.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:layout_marginTop="1.0px"
            android:contentDescription="@null"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/my_message_item_title_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:maxLines="1"
                android:textColor="@color/main_text_color"
                android:textSize="13.0sp"/>

            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/list_item_indicator"/>
        </LinearLayout>

        <TextView
            android:id="@+id/my_message_item_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17.0dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="end"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/sub_text_color"
            android:textSize="12.0sp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>